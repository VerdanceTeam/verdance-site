<div class="col-12 job">
    <div class="job--title">
        <div class="dot-leader">
            {% if title == "Project Manager" %}<img
                src="/assets/img/icons/flower.svg"
            />{% endif %} {% if title == "Product Designer" %}<img
                src="/assets/img/icons/sun-spot.svg"
            />{% endif %} {% if title == "Software Engineer" %}<img
                src="/assets/img/icons/brackets.svg"
            />{% endif %}
            <div class="large-text">{{ title }}</div>
            <div class="hr"></div>
        </div>
    </div>
    <div class="job--type">
        <div class="dot-leader">
            <p>{{ type }}</p>
            <div class="hr"></div>
        </div>
    </div>
    <div class="job--location">
        <div class="dot-leader">
            <p>{{ location }}</p>
            <div class="hr"></div>
            <div class="job--cta">
                {% include "button", text: "apply", style: "chartreuse" %}
            </div>
        </div>
    </div>
</div>
