<section class="hero section--spacing section--bg-linen">
    <div class="container">
        <div class="col-12">
            <div class="content--wrapper">
                <div class="tablet-hide desktop-hide" style="margin-top: 120px;">
                    <img class="org-logo" src="{{ organization.logo }}" />
                </div>
                <div class="section--intro">
                    <div class="col-6 col-12-tablet col-12-mobile">
                        <h1>{{ organization.name }}</h1>
                    </div>
                    <div class="col-6 col-12-tablet col-12-mobile content--right display-flex mobile-hide">
                        <img class="org-logo" src="{{ organization.logo }}" />
                    </div>
                </div>
                <div class="section--intro">
                    <div class="col-6 col-12-tablet col-12-mobile">
                        <p class="section--subtitle">{{ organization.type_of_work }}</p>
                        <div class="pad-right">
                            <h2>
                                {{ organization.subheading }}
                            </h2>
                            <p>
                                {{ organization.description }}
                            </p>
                        </div>
                    </div>
                    <div class="col-6 col-12-tablet col-12-mobile dash-border dash-border--left dash-border--hide-tablet dash-border--hide-mobile">
                        <img class="org-screenshot" src="{{ organization.screenshot }}" />
                        <p class="org-caption">
                            {{ organization.caption }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
